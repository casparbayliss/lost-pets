<div class="container">
  <div class="row align-items-center">
    <div class="col">
      <div class="add-pet-form">
        <div class="button-row">
          <button type="button" class="btn btn-primary lost-or-found-btn font-weight-bold" id="lost-dog-btn" >This is a dog that I have lost.</button>
          <button type="button" class="btn btn-outline-secondary lost-or-found-btn"" id="found-dog-btn">This is a dog that I have found.</button>
        </div>
        <%= form_for(@dog, :url => {:controller => "dogs", :action => "create"}) do |f| %>
          <div class="radio-toolbar">
            <% f.label :status, 'Lost', id: "lost-radio" %>
            <% f.radio_button :status, 'lost', :checked => true, id: "lost-radio-btn" %>
            <% f.label :status, 'Found', id: "found-radio" %>
            <% f.radio_button :status, 'recovered', id: "found-radio-btn" %>
          </div>
          <div class="form-group">
            <%= f.label :name, class: "control-label" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :description , class: "control-label" %>
            <%= f.text_field :description, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :age, class: "control-label" %>
            <%= f.number_field :age, class: "form-control" %>
          </div>

          <%= f.submit "Add this lost dog", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
    <div class="col">
      <div class="row">
        <%= image_tag("lost-pet-what-to-do.jpg", id: "lost-pet-drawing", alt: "Lost pet") %>
      </div>
    </div>
  </div>
</div>
<p id="jsTest">Text to change colour</p>

